# Server
PORT=3000
NODE_ENV=development
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/simplehire

# JWT Secrets
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-64-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production-min-64-chars
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# Security
BCRYPT_ROUNDS=12

# OpenAI (for resume analysis and multi-LLM evaluation)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic Claude (for multi-LLM evaluation)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Multi-LLM Configuration
LLM_PROVIDERS=gpt-4o,claude-opus-4-5-20251101
ENABLE_MULTI_LLM_ARBITER=true

# AWS S3 (for file uploads)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=simplehire-storage
AWS_ENDPOINT=http://localhost:9000

# Stripe
# For development without Stripe integration, use: sk_test_placeholder
# This will enable the app to run without real Stripe credentials
STRIPE_SECRET_KEY=sk_test_placeholder
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Email
EMAIL_FROM=noreply@simplehire.ai
EMAIL_FROM_NAME=Simplehire
SENDGRID_API_KEY=your-sendgrid-api-key

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
LOGIN_RATE_LIMIT_MAX=5

# File Upload
MAX_FILE_SIZE=16777216
MAX_AUDIO_SIZE=52428800

# Session Management
SESSION_MAX_AGE_MS=3600000

# Logging
LOG_LEVEL=info
